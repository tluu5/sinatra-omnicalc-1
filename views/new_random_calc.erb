<form action="/random/results">
  <div>
    <label for="min_num">Minimum</label>
    <input id="min_num" type="text" name="min_num" placeholder="E.g. 1.5">
  </div>
  <div>
    <label for="max_num">Maximum</label>
    <input id="max_num" type="text" name="max_num" placeholder="E.g. 4.5">
  </div>

  <button>Pick random number</button>
</form>
